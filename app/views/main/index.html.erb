<% content_for :title, "Funny chat" %>

<div class="row">
  <div class="small-12 small-centered medium-8 medium-centered large-8 large-centered columns">
    <div class="hide-for-small-only medium-4 large-4 columns">
      <%= image_tag("default_avatar.png", size: "200x200") %>
      <%= form_tag(upload_avatar_path, multipart: true) do  %>
          <p>
            <label>My Avatar</label>
            <%= file_field(:user, :avatar) %>
          </p>
      <% end %>
    </div>
    <div class="small-12 medium-8 large-8 columns">
      <div id="chat" class="chat">
        <div id="history" class="history"></div>
        <label for="text">Message</label>
        <textarea id="text" rows="3" maxlength="128" placeholder="Input message..." autofocus></textarea>
        <input type="button" id="send" class="button" value="Send message"/>
      </div>
    </div>
  </div>
</div>




