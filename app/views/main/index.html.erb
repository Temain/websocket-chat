<% content_for :title, "Funny chat" %>

<div class="row">
  <div class="small-12 small-centered medium-8 medium-centered large-8 large-centered columns">

    <% flash.each do |name, msg| %>
      <%= content_tag :div, data: { alert: nil }, class: "alert-box #{name} radius" do %>
        <%= msg %>
        <a href="#" class="close">&times;</a>
      <% end %>
    <% end %>

    <div class="row">
      <div class="hide-for-small-only medium-12 large-12 columns">
        <%= render "main/online" %>
      </div>
    </div>

    <div class="hide-for-small-only hide-for-medium-only large-4 columns">
      <%= render "main/person" %>
    </div>
    <div class="small-12 medium-12 large-8 columns">
      <%= render "main/chat" %>
    </div>
  </div>
</div>




