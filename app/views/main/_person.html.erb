<div id="person">
  <div class="avatar-view">
    <%= image_tag(current_user.avatar.url || "default_avatar.png", size: "200x200") %>
    <div class="mask">
      <div class="upload-action">
        <i class="glyphicon glyphicon-arrow-up"></i>
        <span>Upload avatar</span>
      </div>
    </div>
  </div>

  <!-- <div class="switch tiny">
    <input id="exampleCheckboxSwitch" type="checkbox">
    <label for="exampleCheckboxSwitch"></label>
  </div>
  <i class="glyphicon glyphicon-eye-open"></i> -->

  <%= form_tag(upload_avatar_path, multipart: true, class: "upload", id: "upload") do %>
      <p>
        <label>My Avatar</label>
        <%= file_field(:user, :avatar, accept: "image/jpeg,image/png,image/jpg" ) %>
        <%= submit_tag "Ok", class: "button" %>
      </p>
  <% end %>
</div>